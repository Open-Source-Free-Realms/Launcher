<?xml version="1.0" encoding="UTF-8" ?>
<UserControl x:Class="Launcher.Views.Server"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:m="using:Launcher.Models"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:md="https://github.com/whistyun/Markdown.Avalonia"
             xmlns:vm="using:Launcher.ViewModels"
             d:DesignHeight="550"
             d:DesignWidth="650"
             x:DataType="vm:Server"
             mc:Ignorable="d">

  <Design.DataContext>
    <vm:Server />
  </Design.DataContext>

  <Grid ColumnDefinitions="*,Auto" RowDefinitions="50,40,250,20">

    <!-- Title & Refresh Row -->
    <Grid Grid.Row="1"
          Margin="0,0,30,10"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          ColumnDefinitions="Auto,Auto">

      <!-- Refresh Status -->
      <Button Grid.Column="0"
              VerticalAlignment="Center"
              Classes="no_background"
              Command="{Binding RefreshServerStatusCommand}">
        <Path Width="18"
              Height="18"
              Classes.rotating="{Binding IsRefreshing}"
              Data="{StaticResource Icons.Loading}"
              Stretch="Fill" />
      </Button>

      <!-- Title -->
      <Border Grid.Column="1">
        <TextBlock FontFamily="{StaticResource FontDefault}"
                   FontSize="24"
                   Text="{Binding Info.Name, Mode=OneWay}" />
      </Border>
    </Grid>

    <!-- Server Status / Player Count -->
    <Grid Grid.Row="2"
          Margin="10,0,0,230"
          HorizontalAlignment="Center"
          ColumnDefinitions="Auto,Auto">
      <StackPanel Grid.Column="0"
                  Margin="0,0,10,0"
                  HorizontalAlignment="Center"
                  Orientation="Horizontal"
                  Spacing="2.5">
        <TextBlock FontFamily="{StaticResource FontDefault}"
                   FontSize="15"
                   Text="{StaticResource Text.ServerStatus}" />
        <TextBlock FontFamily="{StaticResource FontDefault}"
                   FontSize="15"
                   Foreground="{Binding ServerStatusFill}"
                   Text="{Binding Status, Mode=OneWay}" />
      </StackPanel>

      <StackPanel Grid.Column="1"
                  HorizontalAlignment="Center"
                  Orientation="Horizontal">
        <TextBlock FontFamily="{StaticResource FontDefault}"
                   FontSize="15"
                   Text="{StaticResource Text.OnlinePlayers}" />
        <TextBlock Width="30"
                   FontFamily="{StaticResource FontDefault}"
                   FontSize="15"
                   Text="{Binding OnlinePlayers, Mode=OneWay}" />
      </StackPanel>
    </Grid>

    <!-- Server Description -->
    <Grid Grid.Row="2">
      <Border Width="580"
              Margin="0,35,0,0"
              BorderBrush="{StaticResource Color.Border}"
              BorderThickness="1"
              CornerRadius="5"
              IsVisible="{Binding Info.Description, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
        <Border Padding="15"
                Background="{StaticResource Color.Description}"
                CornerRadius="5"
                Opacity="0.050">
          <ScrollViewer HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Opacity="200">
            <md:MarkdownScrollViewer HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Markdown="{Binding Info.Description}" />
          </ScrollViewer>
        </Border>
      </Border>
    </Grid>

    <!-- Server Play / Update Status -->
    <StackPanel Grid.Row="3" Margin="0,20,0,0">
      <Grid HorizontalAlignment="Center">
        <Button Classes="no_background"
                Command="{Binding PlayCommand}"
                Cursor="Hand"
                IsVisible="{Binding PlayCommand.IsRunning, Converter={x:Static BoolConverters.Not}}">
          <Image Width="165"
                 Source="/Assets/fr_asset3.png"
                 Stretch="UniformToFill" />
        </Button>
      </Grid>
    </StackPanel>

    <!-- Status Info -->
    <StackPanel Grid.Row="3"
                Margin="0,0,0,80"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
      <TextBlock FontFamily="{StaticResource FontDefault}"
                 FontSize="14"
                 Text="{Binding StatusMessage, Mode=OneWay}" />
    </StackPanel>

    <!-- Client Folder -->
    <StackPanel Grid.Row="4"
                Margin="0,170,15,0"
                HorizontalAlignment="Right">
      <Button Classes="flat primary"
              Command="{Binding OpenClientFolderCommand}"
              CornerRadius="5"
              ToolTip.Tip="{StaticResource Text.Server.ClientFolder.Tooltip}">
        <Button.Background>
          <LinearGradientBrush StartPoint="50%,0%" EndPoint="50%,100%">
            <GradientStop Offset="0.0" Color="#96B9D9" />
            <GradientStop Offset="4.0" Color="#202959" />
            <GradientStop Offset="0.8" Color="#37538C" />
          </LinearGradientBrush>
        </Button.Background>
        <Path Width="16"
              Height="16"
              Data="{StaticResource Icons.Folder}"
              Stretch="Fill" />
      </Button>
    </StackPanel>
  </Grid>
</UserControl>