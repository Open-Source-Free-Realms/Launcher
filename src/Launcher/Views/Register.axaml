<?xml version="1.0" encoding="UTF-8" ?>
<UserControl x:Class="Launcher.Views.Register"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:v="using:Launcher.Views"
             xmlns:vm="using:Launcher.ViewModels"
             d:DesignHeight="350"
             d:DesignWidth="500"
             x:DataType="vm:Register"
             mc:Ignorable="d">

  <StackPanel>

    <!-- Warning -->
    <TextBlock HorizontalAlignment="Center"
               Foreground="Yellow"
               IsVisible="{Binding Warning, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
               Text="{Binding Warning, Mode=OneWay}"
               TextAlignment="Center" />

    <!-- Username -->
    <StackPanel Margin="0,10,0,0" HorizontalAlignment="Center">

      <TextBlock HorizontalAlignment="Center"
                 FontFamily="{StaticResource FontDefault}"
                 FontSize="18"
                 Text="{StaticResource Text.Register.Username}" />

      <Image Source="/Assets/fr_asset4.png" Stretch="None" />

      <TextBox Width="256"
               Height="22"
               Margin="0,-38,0,0"
               CaretBrush="Black"
               FontSize="13"
               FontWeight="SemiBold"
               Foreground="Black"
               Text="{Binding Username, Mode=TwoWay}" />
    </StackPanel>

    <!-- Password -->
    <StackPanel Margin="0,10,0,0" HorizontalAlignment="Center">

      <TextBlock HorizontalAlignment="Center"
                 FontFamily="{StaticResource FontDefault}"
                 FontSize="18"
                 Text="{StaticResource Text.Register.Password}" />

      <Image Source="/Assets/fr_asset4.png" Stretch="None" />

      <TextBox Width="256"
               Height="22"
               Margin="0,-38,0,0"
               CaretBrush="Black"
               FontSize="13"
               FontWeight="SemiBold"
               Foreground="Black"
               PasswordChar="â€¢"
               Text="{Binding Password, Mode=TwoWay}" />
    </StackPanel>

    <!-- Buttons -->
    <StackPanel Margin="0,10,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal"
                Spacing="5">

      <Button Classes="flat primary"
              Command="{Binding ConfirmCommand}"
              Content="{StaticResource Text.Register}"
              FontFamily="{StaticResource FontDefault}"
              HotKey="Enter">
        <Button.Background>
          <LinearGradientBrush StartPoint="50%,0%" EndPoint="50%,100%">
            <GradientStop Offset="0.0" Color="#96B9D9" />
            <GradientStop Offset="4.0" Color="#202959" />
            <GradientStop Offset="0.8" Color="#37538C" />
          </LinearGradientBrush>
        </Button.Background>
      </Button>

      <Button Classes="flat primary"
              Command="{Binding CancelCommand}"
              Content="{StaticResource Text.Cancel}"
              FontFamily="{StaticResource FontDefault}">
        <Button.Background>
          <LinearGradientBrush StartPoint="50%,0%" EndPoint="50%,100%">
            <GradientStop Offset="0.0" Color="#96B9D9" />
            <GradientStop Offset="4.0" Color="#202959" />
            <GradientStop Offset="0.8" Color="#37538C" />
          </LinearGradientBrush>
        </Button.Background>
      </Button>
    </StackPanel>
  </StackPanel>
</UserControl>