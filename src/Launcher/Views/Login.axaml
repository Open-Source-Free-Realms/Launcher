<?xml version="1.0" encoding="UTF-8" ?>
<UserControl x:Class="Launcher.Views.Login"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:v="using:Launcher.Views"
             xmlns:vm="using:Launcher.ViewModels"
             d:DesignHeight="350"
             d:DesignWidth="500"
             x:DataType="vm:Login"
             mc:Ignorable="d">

  <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,*">

    <!-- Warning -->
    <TextBlock Grid.Row="0"
               HorizontalAlignment="Center"
               Foreground="Yellow"
               IsVisible="{Binding Warning, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
               Text="{Binding Warning, Mode=OneWay}"
               TextAlignment="Center" />

    <!-- Username -->
    <StackPanel Grid.Row="1"
                Margin="0,10,0,0"
                HorizontalAlignment="Center">

      <TextBlock HorizontalAlignment="Center"
                 FontFamily="{StaticResource FontDefault}"
                 FontSize="18"
                 Text="{StaticResource Text.Login.Username}" />

      <Image Source="/Assets/fr_asset4.png" Stretch="None" />

      <TextBox Width="256"
               Height="22"
               Margin="0,-38,0,0"
               v:AutoFocusBehaviour.IsEnabled="{Binding AutoFocusUsername}"
               CaretBrush="Black"
               FontSize="13"
               FontWeight="SemiBold"
               Foreground="Black"
               Text="{Binding Username, Mode=TwoWay}" />
    </StackPanel>

    <!-- Remember Username -->
    <CheckBox Grid.Row="2"
              HorizontalAlignment="Center"
              Content="{StaticResource Text.Login.RememberUsername}"
              FontFamily="{StaticResource FontDefault}"
              FontSize="14"
              IsChecked="{Binding RememberUsername}" />

    <!-- Password -->
    <StackPanel Grid.Row="3"
                Margin="0,10,0,0"
                HorizontalAlignment="Center">

      <TextBlock HorizontalAlignment="Center"
                 FontFamily="{StaticResource FontDefault}"
                 FontSize="18"
                 Text="{StaticResource Text.Login.Password}" />

      <Image Source="/Assets/fr_asset4.png" Stretch="None" />

      <TextBox Width="256"
               Height="22"
               Margin="0,-38,0,0"
               v:AutoFocusBehaviour.IsEnabled="{Binding AutoFocusPassword}"
               CaretBrush="Black"
               FontSize="13"
               FontWeight="SemiBold"
               Foreground="Black"
               PasswordChar="â€¢"
               Text="{Binding Password, Mode=TwoWay}" />
    </StackPanel>

    <!-- Remember Password -->
    <CheckBox Grid.Row="4"
              HorizontalAlignment="Center"
              Content="{StaticResource Text.Login.RememberPassword}"
              FontFamily="{StaticResource FontDefault}"
              FontSize="14"
              IsChecked="{Binding RememberPassword}" />

    <!-- Buttons -->
    <StackPanel Grid.Row="5"
                Margin="0,0,0,5"
                HorizontalAlignment="Center"
                Orientation="Horizontal"
                Spacing="5">

      <Button Classes="flat primary"
              Command="{Binding ConfirmCommand}"
              Content="{StaticResource Text.Login}"
              FontFamily="{StaticResource FontDefault}"
              HotKey="Enter">
        <Button.Background>
          <LinearGradientBrush StartPoint="50%,0%" EndPoint="50%,100%">
            <GradientStop Offset="0.0" Color="#96B9D9" />
            <GradientStop Offset="4.0" Color="#202959" />
            <GradientStop Offset="0.8" Color="#37538C" />
          </LinearGradientBrush>
        </Button.Background>
      </Button>

      <Button Classes="flat primary"
              Command="{Binding CancelCommand}"
              Content="{StaticResource Text.Cancel}"
              FontFamily="{StaticResource FontDefault}">
        <Button.Background>
          <LinearGradientBrush StartPoint="50%,0%" EndPoint="50%,100%">
            <GradientStop Offset="0.0" Color="#96B9D9" />
            <GradientStop Offset="4.0" Color="#202959" />
            <GradientStop Offset="0.8" Color="#37538C" />
          </LinearGradientBrush>
        </Button.Background>
      </Button>
    </StackPanel>
  </Grid>
</UserControl>